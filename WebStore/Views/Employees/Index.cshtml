@model IEnumerable<WebStore.Models.Employee>

@{
	ViewBag.Title = "Сотрудники";
	Layout = "_LayoutContainer";
}

<h3>Сотрудники</h3>

<a class="btn btn-default" asp-action="Create">Создать</a>

@if (Model.Any())
{
	<table class="table">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(m => m.Id)</th>
				<th>@Html.DisplayNameFor(m => m.LastName)</th>
				<th>@Html.DisplayNameFor(m => m.FirstName)</th>
				<th>@Html.DisplayNameFor(m => m.Patronymic)</th>
				<th>@Html.DisplayNameFor(m => m.BirthDay)</th>
				<th></th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var employee in Model)
			{
				<tr>
					<td>@employee.Id</td>
					<td>@employee.LastName</td>
					<td>@employee.FirstName</td>
					<td>@employee.Patronymic</td>
					<td>@employee.BirthDay</td>
					<td>
						<a asp-action="Details"asp-route-Id="@employee.Id">инфо.</a>
					</td>
					<td>
						<a asp-action="Edit"asp-route-Id="@employee.Id">редакт.</a>
					</td>
					<td>
						<a asp-action="Delete"asp-route-Id="@employee.Id" class="text-danger">
							<i class="fa fa-trash-o"></i>
						</a>
					</td>
					<td>
						<form asp-action="DeleteConfirmed" asp-route-id="@employee.Id">
							<input type="submit" value="Удалить" class="btn btn-sm btn-danger"/>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p>Сотрудников нет...!</p>
}

<hr/>

<a asp-controller="Home" asp-action="Index">На главную</a>
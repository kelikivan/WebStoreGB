@model WebStore.ViewModels.EmployeeEditViewModel

@{
    ViewData["Title"] = "Удаление сотрудника Id:";
}

<div class="container">
    <h1>Удаление</h1>

    <h3>Вы уверены, что хотите удалить этого сотрудника?</h3>
    <div>
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Patronymic)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Patronymic)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.BirthDay)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.BirthDay)
            </dd>
        </dl>
    
        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            <a asp-action="Index">Назад к списку</a>
        </form>
    </div>
</div>
